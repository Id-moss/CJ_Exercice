	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h3 class="display-4 font-italic"></h3>
		<p class="lead my-3">{{ user.firstname }}	{{ user.lastname }}</p>
		<p class="lead my-3">Email :	{{ user.email }}</p>
